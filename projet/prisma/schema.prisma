datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Guild {
  id       Int        @id
  Channel  Channel[]
  GuildContainsMention GuildContainsMention[]
}

model Channel {
  id      Int
  guild   Guild     @relation(fields: [guildId], references: [id])
  guildId Int
  @@id([id,guildId])
  Message Message[]
}

model Message {
  id        Int     @id @unique
  channel   Channel @relation(fields: [channelId,guildId], references: [id,guildId])
  guildId Int
  channelId Int
}

model Mention {
  discipline String
  diplome    String
  @@id([discipline,diplome])
  Parcours   Parcours[]
  GuildContainsMention   GuildContainsMention[]
}

model Parcours {
  annee     DateTime
  trec      String
  role      String   @unique
  mention   Mention  @relation(fields: [discipline,diplome], references: [discipline,diplome])
  discipline String
  diplome String
  @@id([annee,trec])
  Emoji Emoji[]
 
}

model Emoji {
  code       String   @id 
  nom        String
  parcours   Parcours @relation(fields: [parcoursId], references: [role])
  parcoursId String
}

model GuildContainsMention {
  guild     Guild   @relation(fields: [guildId], references: [id])
  guildId   Int
  mention   Mention @relation(fields: [discipline,diplome], references: [discipline,diplome])
  discipline String
  diplome String
  @@id([guildId,diplome])
}
model Config {
  cle    String  @id
  valeur String
}