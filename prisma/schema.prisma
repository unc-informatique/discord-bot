datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model Guild {
  id       Int        @id
  Channel  Channel[]
  GuildContainsMention GuildContainsMention[]
}

model Channel {
  id      Int
  guild   Guild     @relation(fields: [guildId], references: [id], onDelete: Cascade)
  guildId Int
  @@id([id,guildId])
  Message Message[]
}

model Message {
  id        Int     @id 
  channel   Channel @relation(fields: [channelId,guildId], references: [id,guildId], onDelete: Cascade)
  guildId Int
  channelId Int
}

model Mention {
  discipline String
  diplome    String
  @@id([discipline,diplome])
  Parcours   Parcours[]
  GuildContainsMention   GuildContainsMention[]
}

model Parcours {
  annee     String
  trec      String
  role      String   @unique
  edtLastModiified DateTime?
  edtChemin String?
  mention   Mention  @relation(fields: [discipline,diplome], references: [discipline,diplome], onDelete: Cascade)
  discipline String 
  diplome String
  @@id([annee,trec])
  emoji     String
 
}

model GuildContainsMention {
  guild     Guild   @relation(fields: [guildId], references: [id], onDelete: Cascade)
  guildId   Int
  mention   Mention @relation(fields: [discipline,diplome], references: [discipline,diplome] ,onDelete: Cascade)
  discipline String
  diplome String
  @@id([guildId,diplome])
}
model Config {
  cle    String  @id
  valeur String
}